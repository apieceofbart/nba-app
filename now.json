{
  "version": 2,
  "name": "nba-app",
  "builds": [
    {
      "src": "src/backend/index.ts",
      "use": "@now/node@canary"
    },
    {
      "src": "src/frontend/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "src/frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/backend/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/frontend/dist/index.html"
    }
  ],
  "alias": "nba-app.now.sh",
  "public": true
}
